@model Bioskop.WebApp.Models.CreateSalaViewModel
@{
    ViewData["Title"] = "Bioskop-Sale";
}
<h4 class="display-4">Kreiraj Salu</h4>
<hr />
<div class="row">
    <div class="w-100 p-3">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sala.NazivSale" class="control-label"></label>
                <input asp-for="Sala.NazivSale" style="width:40%"  class="form-control" />
                <span asp-validation-for="Sala.NazivSale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sala.BrojKolona" class="control-label"></label>
                <input asp-for="Sala.BrojKolona" style="width:40%" type="number" class="form-control" min="1" />
                <span asp-validation-for="Sala.BrojKolona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sala.BrojRedova" class="control-label"></label>
                <input asp-for="Sala.BrojRedova" style="width:40%" type="number" class="form-control" min="1" />
                <span asp-validation-for="Sala.BrojRedova" class="text-danger"></span>

                <br />
                <div class="form-group">
                    <input type="submit" value="Kreiraj" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
